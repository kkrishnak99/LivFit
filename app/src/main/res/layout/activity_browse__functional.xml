<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_back"

    android:fillViewport="true"
    tools:context="plkk.developers.com.livfit.Browse_Functional">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            android:src="@drawable/functional"
            android:scaleType="centerCrop"
            android:background="@android:drawable/dialog_holo_light_frame"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="hiit"
            android:text="High Intensity Interval Training"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="medicine_squat"
            android:text="Medicine Ball Squat"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="stairclimb_bicep"
            android:text="Stair Climb with Bicep Curl"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="lunge_backrow"
            android:text="Lunge With Back Row"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="pushup_hip"
            android:text="Pushup with Hip Extension"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_powerclean"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="power_clean"
            android:text="Power Clean"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_frontsquat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="front_squat"
            android:text="Front Squat"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>
    </LinearLayout>
</ScrollView>
