<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_bg"
    tools:context="plkk.developers.com.livfit.User">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ripple_effect"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="LOGOUT"
                android:onClick="onClickLogout"/>

            <Button
                android:id="@+id/MyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/Logout"
                android:background="@drawable/ripple_effect"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="MY PROFILE"/>

            <TextView
                android:id="@+id/Welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Logout"
                android:text="text"
                android:layout_marginTop="30dp"
                android:textSize="20sp"/>

        </RelativeLayout>
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <Button
                android:id="@+id/button_RecommendedWorkouts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:text="Recommended \nWorkouts"
                android:textSize="18sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/button_RecommendedDiets"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Recommended \nDiets"
                android:textSize="18sp"
                android:background="@drawable/ripple_effect"/>

            <Button
                android:id="@+id/button_Browse"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Browse \nall content"
                android:textSize="18sp"
                android:background="@drawable/ripple_effect"
                android:onClick="onClickBrowse"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>