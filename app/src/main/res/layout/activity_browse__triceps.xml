<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_back"

    tools:context="plkk.developers.com.livfit.Browse_Triceps">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            android:src="@drawable/browse_triceps"
            android:scaleType="centerCrop"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/button_diamonddips"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Diamond Dips"
            android:onClick="diamond_Dips"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_closebench"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="close_bench"
            android:text="Close Grip Bench Press"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_skullcrusher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="skull_crusher"
            android:text="Skull Crusher"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_tricepextension"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="tricep_extension"
            android:text="Dumbbell Lying Tricep Extension"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>

        <Button
            android:id="@+id/button_ropepulldown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="rope_pulldown"
            android:text="Rope Pulldown"
            android:background="@drawable/ripple_effect"
            android:textColor="#000000"
            android:layout_margin="4dp"/>
    </LinearLayout>
</ScrollView>
